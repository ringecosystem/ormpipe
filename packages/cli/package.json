{
  "name": "@darwinia/ormpipe-cli",
  "version": "0.0.6",
  "description": "ormp relay cli",
  "author": "Darwinia Netowrk",
  "bin": {
    "ormpipe": "./bin/run"
  },
  "homepage": "https://github.com/darwinia-network/ormpipe",
  "license": "MIT",
  "main": "dist/index.js",
  "repository": "darwinia-network/ormpipe",
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "/bin",
    "/dist",
    "/npm-shrinkwrap.json",
    "/oclif.manifest.json"
  ],
  "dependencies": {
    "@darwinia/ormpipe-relay": "^0.0.6",
    "@darwinia/ormpipe-integration": "^0.0.6",
    "@oclif/core": "^2",
    "@oclif/plugin-help": "^5",
    "camelize": "^1",
    "enquirer": "^2"
  },
  "devDependencies": {
    "@types/jest": "^29",
    "@types/node": "^20",
    "@typescript-eslint/eslint-plugin": "^5",
    "@typescript-eslint/parser": "^5",
    "eslint": "^8",
    "jest": "^29",
    "oclif": "^3",
    "shx": "^0.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10",
    "tslib": "^2",
    "typescript": "^5"
  },
  "oclif": {
    "bin": "ormpipe",
    "dirname": "ormpipe",
    "commands": "./dist/commands",
    "plugins": [
      "@oclif/plugin-help"
    ],
    "topicSeparator": " ",
    "topics": {
      "start": {
        "description": "Start ormpipe"
      }
    },
    "hooks": {
      "init": "./dist/hooks/init/prepare"
    }
  },
  "scripts": {
    "build": "shx rm -rf dist && tsc -b",
    "lint": "eslint . --ext .ts --fix",
    "postpack": "shx rm -f oclif.manifest.json",
    "posttest": "yarn lint",
    "prepack": "yarn build && oclif manifest && oclif readme",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "version": "oclif readme && git add README.md"
  },
  "engines": {
    "node": ">=12.0.0"
  },
  "bugs": "https://github.com/darwinia-network/ormpipe/issues",
  "keywords": [
    "darwinia", "ormp"
  ]
}
